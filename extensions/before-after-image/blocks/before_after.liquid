      "type": "header",
      "content": "Separator Settings"
    },
    {
      "type": "range",
      "id": "seperator_width",
      "label": "Separator Width",
      "min": 0,
      "max": 10,
      "step": 0.1,
      "unit": "rem",
      "default": 0.2
    },
    {
      "type": "color",
      "id": "seperator_color",
      "label": "Separator Color",
