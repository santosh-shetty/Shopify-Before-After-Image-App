    },
    {
      "type": "text",
      "id": "maxMobContainerHeight",
      "label": "Mobile Height",
      "default": "80vh"
    },
    {
      "type": "text",
      "id": "containerPadding",
      "label": "Desktop Margin",
      "default": "40px 0px 40px 0px"
    },
    {
      "type": "text",
      "id": "mobileContainerPadding",
      "label": "Mobile Margin",
      "default": "20px 0px 20px 0px"
    },
    {
      "type": "range",
      "id": "containerBorderRadius",
      "label": "Border Radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },

    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Before Image"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "After Image"
    },
    {
      "type": "image_picker",
      "id": "arrow",
      "label": "Arrow"
    },

